<!DOCTYPE etl PUBLIC "-//sparrow Framework//DTD etl Configuration//EN"
        "etl_template.dtd">
<etl>
    <!--获取用户特征-->
    <select name="order_count" args="name,order">
        select * from search_data.recommed_index_lr_class1_feature where name=${name} and order=${order}
    </select>
    <select name="order_count_7_day_feature" args="id,days">
        select * from b
    </select>
    <select name="order_count_180_days_feature" args="id,days">
        select * from c
    </select>
    <select name="user_feature" args="user_id,user_age">
        select * from t where user_id=${user_id} and user_age=${user_age}
    </select>
</etl>